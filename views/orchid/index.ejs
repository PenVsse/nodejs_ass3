<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Orchids</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <link rel="stylesheet" href="main.css" type="text/css" />
  </head>
  <body class="body">
    <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #e3f2fd">
      <div class="container-fluid">
        <a class="navbar-brand">
          <i class="fas fa-seedling fa-lg"></i>
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"> </span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/home">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" style="font-weight: bolder; color: #3ba0fd" href="/orchids">Orchids</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"> Dropdown </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="#">Action</a></li>
                <li><a class="dropdown-item" href="#">Another action</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li><a class="dropdown-item" href="#">Something else here</a></li>
              </ul>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" aria-disabled="true">Disabled</a>
            </li>
          </ul>
          <a href="/user/login" class="btn btn-outline-success" type="submit">Login</a>
          <a href="/user/register" class="btn btn-outline-success" type="submit">Register</a>
        </div>
      </div>
    </nav>

    <div class="container">
      <div class="card">
        <div class="card-header">
          <input type="text" id="p_filter_card" onkeyup="myFunction()" placeholder="Search for card name..." />
        </div>
        <div class="card-body">
          <div class="row g-4" id="p_list_card">
            <% orchidsData.length >0 && orchidsData.forEach(function(orchid){ %>
            <div class="col-3 p_card">
              <div class="card">
                <img class="card-img-top" style="height: 200px" src="<%= orchid.image %>" alt="<%= orchid.name %>" />
                <div class="card-body">
                  <h5 class="card-title"><%= orchid.name %></h5>
                  <p class="card-text"><%= orchid.category.categoryName %></p>
                  <div style="text-align: center">
                    <button style="width: 50%" type="button" class="btn btn-primary">Detail</button>
                  </div>
                </div>
              </div>
            </div>
            <% }); %>
            <div id="no_data_message" style="display: none; text-align: center">
              <i class="fas fa-file-excel" style="color: #878787; font-size: 80px"></i>
              <div>No data</div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
      window.addEventListener("DOMContentLoaded", function () {
        const user = req.session.user;
        console.log("ðŸš€ ~ file: index.ejs:98 ~ user:", user);
      });
      function myFunction() {
        var input, filter, cards, cardContainer, title, i;
        input = document.getElementById("p_filter_card");
        filter = input.value.toUpperCase();
        cardContainer = document.getElementById("p_list_card");
        cards = cardContainer.getElementsByClassName("p_card");
        var noResultMessage = document.getElementById("no_data_message");

        var hasVisibleCard = false;
        for (i = 0; i < cards.length; i++) {
          title = cards[i].querySelector(".card-title");
          if (title.innerText.toUpperCase().indexOf(filter) > -1) {
            cards[i].style.display = "";
            hasVisibleCard = true;
          } else {
            cards[i].style.display = "none";
          }
        }
        if (!hasVisibleCard) {
          noResultMessage.style.display = "block";
        } else {
          noResultMessage.style.display = "none";
        }
      }
    </script>
  </body>
</html>
